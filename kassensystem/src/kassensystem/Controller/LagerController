package Controller;

import Database.Lager;
import Parsing.Artikel;

public class LagerController 
{
	private Lager lager;
	
	public LagerController(String xml)
	{
		lager = new Lager(xml);
	}
	
	public void artikelZumLagerHinzu(BenutzerController benutzerController, ArtikelController artikelController)
	{
		Artikel article = new Artikel(artikelController.getArtikel().getName(), artikelController.getArtikel().getEan(), 
				artikelController.getArtikel().getKategorie(), artikelController.getArtikel().getEinheit(), 
				artikelController.getArtikel().getPreiseinheit(), artikelController.getArtikel().getGewicht(), 
				artikelController.getArtikel().getAnzahl(), artikelController.getArtikel().getPreis(), 
				artikelController.getArtikel().getGrundpreis());
		
		if(benutzerController.istAdmin())
		{
			lager.ArtikelHinzufuegen(article);
		}
	}
	
	public ArtikelController suchen(String eanOderName)
	{
		return new ArtikelController(lager.search(eanOderName));
	}
	
	public void artikelAusLagerRaus(BenutzerController benutzerController, String ean)
	{
		if(benutzerController.istAdmin())
		{
			lager.delete(ean);
		}
	}
	
	public Lager getLager()
	{
		return lager;
	}
}
